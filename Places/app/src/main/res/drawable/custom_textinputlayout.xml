<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="line">
            <solid android:color="#ffffff" />
            <stroke android:width="1dp" android:color="#ffA4A4A4" />
            <size android:height="40dp" />
            <corners android:radius="7dp" />
            <padding android:left="3dp" android:top="1dp" android:right="10dp"
                     android:bottom="6dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="line">
            <solid android:color="#ffffff" />
            <stroke android:width="1dp" android:color="#ffA4A4A4" />
            <size android:height="40dp" />
            <corners android:radius="7dp" />
            <padding android:left="3dp" android:top="2dp" android:right="10dp"
                     android:bottom="6dp" />
        </shape>
    </item>
    <item>

        <shape android:shape="line">
            <solid android:color="#ffffff" />
            <stroke android:width="1dp" android:color="#ffA4A4A4" />
            <size android:height="40dp" />
            <corners android:radius="7dp" />
            <padding android:left="3dp" android:top="2dp" android:right="10dp"
                     android:bottom="6dp" />
        </shape>

    </item>


</selector>
